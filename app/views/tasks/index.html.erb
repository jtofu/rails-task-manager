<h2>My tasks</h2>
<% @tasks.each do |task| %>
  <%= form_for(task) do |f| %>
    <%= f.check_box :completed %>
    <%= link_to task.title, task_path(task)%>
    <%= link_to 'delete', task_path(task),
      method: :delete,
      data: { confirm: "Delete #{task.title} ?" } %>
  <% end %>
<% end %>
<%= link_to 'Add new task', new_task_path  %>
